
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <PreferenceCategory app:title="Ajustes">
        <ListPreference app:title="DarkMode"
            app:key="dark_mode"
            app:useSimpleSummaryProvider="true"
            app:defaultValue="1"
            app:entries="@array/dark_mode_entries"
            app:entryValues="@array/dark_mode_entries_values"
          />

    </PreferenceCategory>
    <SwitchPreference
        android:defaultValue="true"
        android:key="switch_preference_insignias"
        android:title="Mostrar Insignias de Nivel"
        android:switchTextOn="On"
        app:switchTextOff="Off"
        app:switchTextOn="On"
        android:switchTextOff="Off"
        />



</PreferenceScreen>