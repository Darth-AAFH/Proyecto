                            android:textAlignment="center"
                            android:textColor="@color/gray_dark"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/tvTotalRunsLevel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
