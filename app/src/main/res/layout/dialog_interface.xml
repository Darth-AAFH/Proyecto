<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <EditText
        android:id="@+id/PlacesName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Descripcion" />

    <RadioGroup
        android:id="@+id/RadioGroupDialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"

        >
        <RadioButton
            android:id="@+id/rdBtnPark"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:text="Parque" />

        <RadioButton
            android:id="@+id/rdBtnGym"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:text="Gimnasio" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonAddAlert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="AÃ±adir"
            />

        <Button
            android:id="@+id/buttonCancelAlert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/chrono_running"
            android:text="Cancelar" />
    </LinearLayout>

</LinearLayout>